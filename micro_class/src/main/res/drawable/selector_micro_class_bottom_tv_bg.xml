<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 手指按压中的状态 -->
    <item android:state_pressed="true">
        <layer-list >
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="18dp" />
                    <solid android:color="@color/config_color_25_pure_black" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- 默认的背景 -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="18dp" />
                    <solid android:color="@color/config_color_15_pure_black" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>